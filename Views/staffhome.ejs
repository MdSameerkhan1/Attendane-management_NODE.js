<body>

  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-body-tertiary">
    <div class="container">
      <a class="navbar-brand" href="#">AMS</a>
    </div>
  </nav>

  <!-- Main content -->
  <div class="container mt-4">
    <div class="row">
      <!-- Card 1 -->
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="https://media.istockphoto.com/id/1339432131/photo/positive-african-american-teen-student-with-backpack-tablet-pc-and-headphones-studying-online.jpg?s=612x612&w=0&k=20&c=2xP7maYORji-w4irFkwgI8maFW21AWvrv1sCfiDRCtw=" class="card-img-top" alt="Create a new Student Id">
